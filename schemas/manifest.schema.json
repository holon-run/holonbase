{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://holon.run/schemas/manifest.schema.json",
  "title": "Holon Execution Manifest",
  "description": "Manifest file generated by Holon agents after task execution. Contains execution status, artifacts, and metadata.",
  "type": "object",
  "required": ["status", "outcome", "duration", "artifacts"],
  "properties": {
    "status": {
      "description": "Execution status indicator. Always 'completed' for finished executions.",
      "type": "string",
      "enum": ["completed", "failed", "running"],
      "default": "completed"
    },
    "outcome": {
      "description": "Final outcome of the execution attempt.",
      "type": "string",
      "enum": ["success", "failure", "needs_human"],
      "default": "success"
    },
    "duration": {
      "description": "Total execution duration. Accepts string format (e.g., '12.5s') or number format (seconds, for backward compatibility).",
      "oneOf": [
        {
          "type": "string",
          "pattern": "^\\d+(\\.\\d+)?s$"
        },
        {
          "type": "number",
          "minimum": 0
        }
      ]
    },
    "artifacts": {
      "description": "List of output artifacts generated during execution. Accepts string array (paths) or object array (with name/path) for backward compatibility.",
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Artifact path relative to output directory"
          }
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "path"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Human-readable artifact name"
              },
              "path": {
                "type": "string",
                "description": "Artifact path relative to output directory"
              }
            }
          }
        }
      ]
    },
    "metadata": {
      "description": "Additional execution metadata including agent information, mode, and optional engine details.",
      "type": "object",
      "properties": {
        "agent": {
          "description": "Agent identifier (e.g., 'agent-claude', 'agent-claude-prfix')",
          "type": "string"
        },
        "version": {
          "description": "Agent version string (e.g., 'v0.7.0', 'v0.7.0-beta.1')",
          "type": "string",
          "pattern": "^v?\\d+\\.\\d+\\.\\d+.*"
        },
        "mode": {
          "description": "Execution mode (e.g., 'solve', 'pr-fix', 'probe')",
          "type": "string"
        },
        "engine": {
          "description": "Claude engine information (optional, added in v0.7.0)",
          "type": "object",
          "properties": {
            "model": {
              "description": "Model identifier (e.g., 'claude-sonnet-4-5-20250929')",
              "type": "string"
            },
            "version": {
              "description": "Engine version (e.g., '20250929')",
              "type": "string"
            }
          }
        }
      }
    },
    "error": {
      "description": "Error message included when outcome is 'failure'.",
      "type": "string"
    }
  },
  "definitions": {
    "durationFormat": {
      "description": "Duration in seconds with 's' suffix",
      "type": "string",
      "pattern": "^\\d+(\\.\\d+)?s$"
    },
    "artifactPath": {
      "description": "Artifact path relative to output directory",
      "type": "string"
    },
    "artifactObject": {
      "type": "object",
      "required": ["name", "path"],
      "properties": {
        "name": {
          "type": "string"
        },
        "path": {
          "type": "string"
        }
      }
    }
  },
  "examples": [
    {
      "status": "completed",
      "outcome": "success",
      "duration": "12.5s",
      "artifacts": [
        "diff.patch",
        "summary.md",
        "evidence/"
      ],
      "metadata": {
        "agent": "agent-claude",
        "version": "v0.7.0",
        "mode": "solve",
        "engine": {
          "model": "claude-sonnet-4-5-20250929",
          "version": "20250929"
        }
      }
    },
    {
      "status": "completed",
      "outcome": "failure",
      "duration": "3.2s",
      "error": "Division by zero encountered",
      "artifacts": [
        "evidence/"
      ],
      "metadata": {
        "agent": "agent-claude",
        "version": "v0.6.0",
        "mode": "solve"
      }
    },
    {
      "status": "completed",
      "outcome": "success",
      "duration": 8.7,
      "artifacts": [
        {"name": "diff.patch", "path": "diff.patch"},
        {"name": "summary.md", "path": "summary.md"}
      ],
      "metadata": {
        "agent": "agent-claude",
        "version": "v0.7.0",
        "mode": "pr-fix"
      }
    }
  ]
}
